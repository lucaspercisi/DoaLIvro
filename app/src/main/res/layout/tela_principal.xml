<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/capa_doa_livro">

    <Button
        android:text="@string/livros_em_doacao"
        android:id="@+id/b_livrosDoacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/doar_livro"
        android:id="@+id/b_doar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>